<div class="container">  
  <h1><%= @flat.name %></h1>
  <address>Address: <%= @flat.address %></address>
  <p>Description: <%= @flat.description %></p>
  <p>Price per night: <%= @flat.price_per_night %></p>
  <p>Number of guests: <%= @flat.number_of_guests %></p>
  
  <div class="d-flex justify-content-between">
    <%= link_to 'Add a flat', new_flat_path, class: "btn btn-primary" %>
    <%= link_to 'Back to flat list', flats_path, class: "btn btn-outline-primary" %>
  </div>
</div>