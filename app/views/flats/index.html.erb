<nav class="navbar navbar-light bg-light">
  <span class="navbar-brand mb-0 h1">Simple Airbnb - Oscar</span>
  <%# <a href="/flats/new" class="btn btn-outline-primary">Add Flat</a> %>
  <%= link_to('Add Flat', new_flat_path, class: "btn btn-outline-primary") %>
</nav>

<div class="container">
  <div class="row">
    <div class="col">
      <h1>All our flats</h1>
    </div>
  </div>
  <div class="row">
  <% @flats.each do |flat| %>
    <div class="col-4 mb-2">
      <div class="card">
        <div class="card-body bg-light">
          <h5 class="card-title"><%= flat.name %></h5>
          <p class="card-text"><%= flat.address %></p>
          <i class="fas fa-user-friends"></i><span class="ml-1 mr-2"><%= flat.number_of_guests %></span>
          <i class="fas fa-euro-sign"></i><span class="ml-1 mr-2"><%= flat.price_per_night %></span>
        </div>
        <div class="card-footer bg-white">
          <%= link_to('More info', flat_path(flat), class: "mr-3 text-decoration-none") %>
          <%= link_to('Edit', edit_flat_path(flat), class: "mr-3 text-decoration-none text-warning") %>
          <%= link_to('Delete', flat_path(flat), method: :delete, data: { confirm: 'Are you sure?'}, class: "mr-3 text-decoration-none text-danger") %>
        </div>
      </div>  
    </div>
  <% end  %>
  </div>
</div>
